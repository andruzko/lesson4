<div class="main">
<% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
              <%= value %>
        </div>
  <% end %>
<h1>New Post</h1>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Avatar</th>
      <th>User</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @post.title %></td>
        <td><%= @post.body %></td>
        <td><%= image_tag(avatar_url(@post.user), width:48) %></td>
        <td><%= @post.user.name %></td>
        <td><%= link_to 'Back', posts_path, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_post_path(@post), class: "btn btn-info" %></td>
      </tr>
  </tbody>
</table>