<header class="navbar navbar-fixed-top navbar-inverse" role="navigation">
      <div class="container">
        <nav>
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to "Posts list", root_path, class:"btn btn-lg btn-primary" %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li><%= link_to 'Log out', sessions_logout_path %></li>
              <li><%= link_to 'posts of ' + current_user.name, userallposts_path %></li>
            <% else %>
              <li><%= link_to 'Sing up', registration_path %></li>
              <li><%= link_to 'Log in', sessions_login_path %></li>
            <% end %>
            <li>
              <%= form_tag(posts_path, method: :get, :class => "form-inline" ) do %>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Знайти", :name => nil, class: "btn btn-default" %>
              <% end %>
            </li>
          </ul>
        </nav>
      </div>
    </header>